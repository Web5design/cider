<!DOCTYPE html>
<html>
  <head>
    <link href="../file-manager.css" rel="stylesheet" type="text/css" />
    
    <script type="text/javascript">var path = '{{path}}';</script>
    <script src="../javascript/file-manager.js" type="text/javascript"></script>
    
    <title>{{title}}</title>
  </head>
  <body>
    <table id="fileList">
      <thead>
        <tr>
          <th colspan="2">Name</th>
        </tr>
      </thead>
      <tbody>
        {{#path}}
        <tr>
          <td>&nbsp;</td>
          <td><a href="../file-manager/?path={{up}}">..</a></td>
        </tr>
        {{/path}}
        {{#fileList}}
        <tr>
          {{#isFile}}
          {{#path}}
          <td class="icon">
            <a href="../editor/?file={{path}}/{{name}}" target="_blank">
              <img src="../images/icon/file.png" />
            </a>
          </td>
          <td><a href="../editor/?file={{path}}/{{name}}" target="_blank">{{name}}</a></td>
          {{/path}}
          {{^path}}
          <td class="icon">
            <a href="../editor/?file={{name}}" target="_blank">
              <img src="../images/icon/file.png" />
            </a>
          </td>
          <td><a href="../editor/?file={{name}}" target="_blank">{{name}}</a></td>
          {{/path}}
          {{/isFile}}
          {{^isFile}}
          {{#path}}
          <td class="icon">
            <a href="../file-manager/?path={{path}}/{{name}}">
              <img src="../images/icon/folder.png" />
            </a>
          </td>
          <td><a href="../file-manager/?path={{path}}/{{name}}">{{name}}</a></td>
          {{/path}}
          {{^path}}
          <td class="icon">
            <a href="../file-manager/?path={{name}}">
              <img src="../images/icon/folder.png" />
            </a>
          </td>
          <td><a href="../file-manager/?path={{name}}">{{name}}</a></td>
          {{/path}}
          {{/isFile}}
        </tr>
        {{/fileList}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="2">
            <input id="name" type="text" />
            <input type="button" value="New File" onclick="createFile();" />
          </td>
        </tr>
      </tfoot>
    </table>
  </body>
</html>
